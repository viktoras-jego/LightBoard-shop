{% trans_default_domain 'FOSUserBundle' %}

<title>Login</title>
{% block body %}
    <div id="wrapper2">
        {% if error %}
            <h2>
                <div class="flash-notice">

                    <div class="alert alert-danger fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close"></a>
                        <center> <strong>Wrong Username/Password</strong></center>
                    </div>

                </div>
            </h2>
        {% endif %}
    </div>
    <div id="wrapper">

     <h2> <form action="{{ path("fos_user_registration_register") }}">

             &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &#8201 &#8201 &#8201   <button class="btn-link" type="submit">Register</button>
        </form>
     </h2>

        <form action="{{ path("fos_user_security_check") }}" method="post">

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <h1 class="form-signin-heading">Please Log in</h1>
            <h3>


                <label for="username" class="sr-only">Username</label>
                <input type="username" id="username" name="_username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" required="required" >

                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required">

                &nbsp &nbsp &nbsp &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp
                <label>
             <h3> <input type="checkbox" value="remember-me"> Remember me</h3>
                </label>



                 <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
                &nbsp &nbsp &nbsp &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp  &nbsp
           <br>
                <br>
            </h3>


        </form>
    </div>

    <script>


        setTimeout(function () {
            $( ".flash-notice" ).fadeOut();
        }, 2350)

    </script>

{% endblock %}
{% block stylesheets %}
    <style>
        body { background: #f1f1f1; font: 50px/2.5 sans-serif; }

        a {text-decoration: none}
        h1, h2, h3 { line-height: 1.2; margin: 0 0 .0em; }
        h1 { font-size: 30px; }
        h2 { font-size: 15px; }
        h3 { font-size: 15px;}
        p { margin: 0 0 1em 0; }
        a { color: #000000; }
        a:hover { text-decoration: none; }
        code { background: #e7e7e7; max-width: 200px; padding: 2px 6px; word-wrap: break-word; }
        #wrapper { background: #f1f1f1; margin: 1em auto; max-width: 310px; width: 0%;border: 2px solid rgba(170, 255, 49, 0); border-radius: 3px;}
        #wrapper2 {
            width: 500px;
            margin: 0 auto;
        }
        #container { padding: 2em; }
        #welcome, #status { margin-bottom: 2em; }
        #welcome h1 span { display: block; font-size: 75%; }
        #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
        #icon-book { display: none; }

        @media (min-width: 568px) {
            #wrapper { width: 80%; margin: 2em auto; }
            #icon-book { display: inline-block; }
            #status a, #next a { display: block; }

            @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
        }
    </style>
{% endblock %}
